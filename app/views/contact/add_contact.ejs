<%- include('../layouts/header.ejs') %>

    <div class="container p-2 my-2 border">
        <a href="/" class="btn btn-outline-dark"> <i class="fa-solid fa-arrow-left"></i> Back</a>
    </div>

    <div class="container p-3 border bg-light-subtle rounded-2">
        <div class="w-75 mx-auto p-5">
            <form action="/add-contact" method="post" enctype="multipart/form-data">
                <div class="form-row mt-3">
                    <label class="form-label" for="name" >Name :</label>
                    <input type="text" name="name" class="form-control" placeholder="name" required >
                </div>
                <div class="form-row mt-3">
                    <label class="form-label" for="email">Email :</label>
                    <input type="email" name="email" class="form-control" placeholder="Email" required >
                </div>
                <div class="form-row mt-3">
                    <label class="form-label" for="phone">Phone :</label>
                    <input type="tel" name="phone" class="form-control" placeholder="Phone number" required >
                </div>
                <div class="form-row mt-3">
                    <label class="form-label" for="image">Default file input example</label>
                    <input type="file" name="image" class="form-control" id="customFile" />
                </div>
                <div class="form-row mt-3">
                    <button type="submit" class="w-100 btn btn-lg btn-dark">Add user</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>