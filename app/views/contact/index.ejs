<%- include('../layouts/header.ejs') %>

    <div class="container p-2">
        <% if (message) { %>
            <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                <strong>
                    <%= message.message %>
                </strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
    </div>

    <div class="container p-4 border">
        <div class="row">
            <div class="col-lg-12">
                <table id="table" class="table table-responsive table-bordered table-striped text-center">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% contacts.forEach((contact, index)=> { %>
                            <tr>
                                <td>
                                    <%= ++index %>
                                </td>
                                <% if (contact.image) { %>
                                    <td><img src="./public/uploads/<%= contact.image %>" alt="image" height="50px"></td>
                                <% } else { %>
                                    <td><img src="./public/uploads/default.jpg" alt="image" height="50px"></td>
                                <% } %>
                                <td>
                                    <%= contact.name %>
                                </td>
                                <td>
                                    <%= contact.email %>
                                </td>
                                <td>
                                    <%= contact.phone %>
                                </td>
                                <td>
                                    <a href="/contact/<%= contact.id %>" class="btn btn-outline-dark">
                                        <i class="fa-regular fa-eye"></i>
                                    </a>
                                    <a href="/edit/<%= contact.id %>" class="btn btn-warning">
                                        <i class="fa-regular fa-edit"></i>
                                    </a>
                                    <a href="/delete/<%= contact.id %>" class="btn btn-danger">
                                        <i class="fa-regular fa-trash-can"></i>
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer.ejs') %>